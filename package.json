{
  "name": "meals-and-drinks-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "SET NODE_ENV=production && node dist/index.js",
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "test": "dotenv -e .env.test.local -- jest",
    "test:watch": "dotenv -e .env.test.local -- jest --watchAll",
    "test:coverage": "dotenv -e .env.test.local -- jest --coverage",
    "format": "prettier --write .",
    "prisma:studio:test": "dotenv -e .env.test -- pnpx prisma studio",
    "prisma:studio:dev": "dotenv -e .env.development -- pnpx prisma studio",
    "prisma:studio:prod": "dotenv -e .env.production -- pnpx prisma studio",
    "prisma:migrate:test": "dotenv -e .env.test -- pnpx prisma db push",
    "prisma:migrate:dev": "dotenv -e .env.development -- pnpx prisma db push",
    "prisma:migrate:prod": "dotenv -e .env.production -- pnpx prisma db push",
    "prisma:seed:test": "dotenv -e .env.test -- pnpx prisma db seed",
    "prisma:seed:dev": "dotenv -e .env.development -- pnpx prisma db seed",
    "prisma:seed:prod": "dotenv -e .env.production -- pnpx prisma db seed",
    "prisma:reset:test": "dotenv -e .env.test -- pnpx prisma migrate reset --force --skip-seed",
    "prisma:reset:dev": "dotenv -e .env.development -- pnpx prisma migrate reset --force --skip-seed",
    "prisma:reset:prod": "dotenv -e .env.production -- pnpx prisma migrate reset --force --skip-seed"
  },
  "prisma": {
    "seed": "ts-node ./prisma/seed.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run format && git add ."
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.11",
    "@types/nodemon": "^1.19.6",
    "@types/supertest": "^6.0.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv-cli": "^7.4.2",
    "express": "^4.19.2",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@prisma/client": "5.17.0"
  }
}
